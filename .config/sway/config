# Global mod key
set $mod Mod4

# Set up wob
set $XOBSERVICE $HOME/.config/xob/service
exec_always $XOBSERVICE run

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK

# Background
output * bg $HOME/wallpaper/kerbal.jpg fill

# HIDPI
output * scale 1.4 mode 5120x2160@120Hz

# Adaptive Refresh Rate
output * adaptive_sync on

# Display switching helper
bindsym Ctrl+Shift+Tab exec --no-startup-id /bin/switch-input toggle

# Hack to hide tabbed borders
font monospace 1
titlebar_border_thickness 0                                                     
titlebar_padding 0

# Switch to vertical or horizontal split
bindsym $mod+equal splith
bindsym $mod+minus splitv

# Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+d floating toggle

# Cursor management
seat * hide_cursor 8000
seat * hide_cursor when-typing enable

# Mouse swaping windows
bindsym --whole-window $mod+Mod1+button1 mark --add quickswap
bindsym --whole-window $mod+button1 swap container with mark quickswap; [con_mark="quickswap"] focus; mark --remove quickswap

# Swap focus between the tiling area and the floating area
bindsym $mod+Shift+d focus mode_toggle

# Status Bar:
bar {
  swaybar_command waybar
}

# Default terminal
set $term wezterm

# Default browser
set $browser firefox

# Launcher
bindsym $mod+space exec "rofi -modi drun,run,combi -show run"
bindsym $mod+Mod1+space exec "rofi -modi drun,run,combi -show drun"

# Start a terminal
bindsym $mod+backslash exec $term

# Start a browser
bindsym $mod+Return exec $browser

# Kill focused window
bindsym $mod+q kill

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+c reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# Moving around:
# Move your focus around
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Workspaces:
# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Escape workspace back_and_forth 

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Resizing containers:
bindsym $mod+r mode "resize"
mode "resize" {
  bindsym Left resize shrink width 10px
  bindsym Down resize grow height 10px
  bindsym Up resize shrink height 10px
  bindsym Right resize grow width 10px

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# Gaps
gaps inner 10px

# Borders
default_border none

# Enable tiling via autotiling
exec_always --no-startup-id autotiling

# XWayland hint
for_window [shell="xwayland"] title_format "%title [XWayland]"

# Faster repeats!
input * {
  repeat_delay 300
    repeat_rate 50
}

# Suspend
bindsym Ctrl+Shift+S exec systemctl suspend

# Bind media keys
bindsym XF86AudioMute exec volume-control toggle-mute
bindsym XF86AudioRaiseVolume exec volume-control up
bindsym XF86AudioLowerVolume exec volume-control down

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screenshots
bindsym $mod+p exec grim - | wl-copy
bindsym $mod+Ctrl+Shift+p exec grim -g "$(slurp)" - | wl-copy

# Videos
#  bindsym $mod+v exec wf-recorder -f ~/recordings/"recording-$(date +'%H%M%S-%d%m%Y').mp4"
# bindsym $mod+Ctrl+Shift+v exec wf-recorder -g "$(slurp)" -f ~/recordings/"recording-$(date +'%H%M%S-%d%m%Y').mp4"

# bindsym $mod+escape exec pkill -INT wf-recorder || notify-send "Ended recording"

# Disable mouse automatic focus under mouse
# focus_follows_mouse no

# Start up mouse driver
exec --no-startup-id /bin/solaar -w hide

# Automount disk
exec /usr/bin/udiskie

## Patches
# Bug in polkit where tty client will fail
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Adjust fan
# Quiet mode
bindsym $mod+B exec --no-startup-id sudo fan-control set_mode quiet && notify-send "Setting fans to quiet mode"
# Performance mode
bindsym $mod+Shift+B exec --no-startup-id sudo fan-control set_mode performance && notify-send "Setting fans to performance mode"

# Temperature
# exec_always --no-startup-id /usr/bin/wlsunset -T 5900

# Print temps and gpu deets
bindsym $mod+T exec --no-startup-id notify-send "`/bin/system-deets`"

# Testing
bindsym $mod+K exec --no-startup-id notify-send `whoami`

# Workspace Assignment
assign [class="steam"] 9
# for_window [class="Steam"] move to workspace 9
assign [app_id="spotify"] 10
# for_window [class="Spotify"] move to workspace 10

include /etc/sway/config.d/*

# Rounded corners from swayfx
# corner_radius 8

# ===== Try later =====
# output * bg '#FFFFFF' solid_color

# Scratchpad
# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.

# Move the currently focused window to the scratchpad
#bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
#bindsym $mod+minus scratchpad show
